@model BKFitness.ViewModels.Membership.NewMembershipModel

@{
ViewData["Title"] = "Create";
}
<div class="row ">
    <div class="container">

        <div class="col-md-8 col-md-offset-2">
            <div class="content ">
                <div id="tab">

                    <h3>Add Membership type</h3>
                    <hr />
                   
               <form asp-action="AddMembership" method="post" id="create" enctype="multipart/form-data"> 
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   
                       <div class="form-group">
                            <label asp-for="MembershipName">Membership Type</label>
                            <input asp-for="MembershipName" class="form-control" />
                            <span asp-validation-for="MembershipName" class="text-danger"></span>
                        </div>
                  

                     <div class="form-group">
                            <label asp-for="MembershipDescription">Description</label>
                          <textarea asp-for="MembershipDescription" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="MembershipDescription" class="text-danger"></span>
                        </div>


                            <div id="upload">
                                <label>Upload Membership Image</label>
                                <br />
                                <label class="btn btn-default btn-file">
                                    Browse <input asp-for="Image" typeof="file" style="display: none" />
                                </label>
                            </div>
                   
                        

                           <div class="form-group">
                            <label asp-for="MembershipPrice">Price</label>
                            <input asp-for="MembershipPrice" class="form-control" />
                            <span asp-validation-for="MembershipPrice" class="text-danger"></span>
                        </div>

                   <button type="submit" class="btn btn-default">Save</button>
                   
                </form>
            </div>
        </div>
    </div>
</div>