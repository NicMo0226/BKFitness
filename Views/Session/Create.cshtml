@model BKFitness.ViewModels.Session.AddSessionModel

@{
    ViewData["Title"] = "Create";
}
<div class="row ">
    <div class="container">

        <div class="col-md-8 col-md-offset-2">
            <div class="content ">
                <div id="tab">
                    <form asp-action="AddSession" method="post" id="create">
                        <h2>Add Class</h2>
                        <hr />
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Image"></label>
                            <input asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                     <div class="form-group">
                            <label asp-for="NonMemberPrice"></label>
                            <input asp-for="NonMemberPrice" class="form-control" />
                            <span asp-validation-for="NonMemberPrice" class="text-danger"></span>
                        </div>  
                         <div class="form-group">
                            <label asp-for="MemberPrice">Price</label>
                            <input asp-for="MemberPrice" class="form-control" />
                            <span asp-validation-for="MemberPrice" class="text-danger"></span>
                        </div>
                    
                        <button type="submit" class="btn btn-default">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>